<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".main.MainFragment">

    <TextView
        android:id="@+id/frg_main_lb_led"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LED's"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/frg_main_tv_red"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:text="RED"
        app:layout_constraintTop_toBottomOf="@id/frg_main_lb_led"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@id/frg_main_tv_green"
        app:layout_constraintEnd_toStartOf="@id/frg_main_tv_green"/>

    <TextView
        android:id="@+id/frg_main_tv_green"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:text="GREEN"
        app:layout_constraintTop_toTopOf="@id/frg_main_tv_red"
        app:layout_constraintLeft_toRightOf="@id/frg_main_tv_red"
        app:layout_constraintStart_toEndOf="@id/frg_main_tv_red"
        app:layout_constraintRight_toLeftOf="@id/frg_main_tv_blue"
        app:layout_constraintEnd_toStartOf="@id/frg_main_tv_blue"/>

    <TextView
        android:id="@+id/frg_main_tv_blue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:text="BLUE"
        app:layout_constraintTop_toTopOf="@id/frg_main_tv_red"
        app:layout_constraintLeft_toRightOf="@id/frg_main_tv_green"
        app:layout_constraintStart_toEndOf="@id/frg_main_tv_green"
        app:layout_constraintRight_toLeftOf="@id/frg_main_tv_yellow"
        app:layout_constraintEnd_toStartOf="@id/frg_main_tv_yellow"/>

    <TextView
        android:id="@+id/frg_main_tv_yellow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:text="YELLOW"
        app:layout_constraintTop_toTopOf="@id/frg_main_tv_red"
        app:layout_constraintLeft_toRightOf="@id/frg_main_tv_blue"
        app:layout_constraintStart_toEndOf="@id/frg_main_tv_blue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MainFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
